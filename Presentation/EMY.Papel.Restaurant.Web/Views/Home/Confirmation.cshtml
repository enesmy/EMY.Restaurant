@using EMY.Papel.Restaurant.Core.Domain.Entities
@model Order
@{
    ViewData["Title"] = "Confirmation";
    Layout = "~/Views/Shared/_ThemeFooresRestaurant.cshtml";
    string domain = Model.EmailAdress.Split('@')[1];
}
<div class="hero_single inner_pages background-image" data-background="url(/Themes/FooresRestaurant/img/hero_menu.jpg)" style="background-image: url(&quot;/Themes/FooresRestaurant/img/hero_menu.jpg&quot;);">
    <div class="opacity-mask" data-opacity-mask="rgba(0, 0, 0, 0.6)" style="background-color: rgba(0, 0, 0, 0.6);">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-9 col-lg-10 col-md-8">
                    <h1>Confirmation</h1>
                </div>
            </div>
            <!-- /row -->
        </div>
    </div>
    <div class="frame white"></div>
</div>
<!-- /hero_single -->

<center>
    <h1>Dear @Model.FullName, please check your mail adres and confirm! <a href="@domain">@domain</a></h1>
    <h4>@Model.OrderNumber</h4>
</center>
