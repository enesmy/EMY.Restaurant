<!DOCTYPE html>
<html lang="de">

<head>
    @await Component.InvokeAsync("Header")
    @await Component.InvokeAsync("CssFiles")

</head>
<script>
    var shopcardflag = false;
    var checkoutflag = false;

</script>
<body>

    <div id="preloader">
        <div data-loader="circle-side"></div>
    </div><!-- /Page Preload -->

    <header class="header clearfix element_to_stick">
        <div class="layer"></div><!-- Opacity Mask Menu Mobile -->
        <div class="container-fluid">
            <div id="logo">
                <a href="/">
                    <img src="/Themes/FooresRestaurant/img/logo.svg" width="140" height="35" alt="" class="logo_normal">
                    <img src="/Themes/FooresRestaurant/img/logo_sticky.svg" width="140" height="35" alt="" class="logo_sticky">
                </a>
            </div>

            <!-- /top_menu -->
            <a href="#0" class="open_close">
                <i class="icon_menu"></i><span>Menu</span>
            </a>

            @(await Component.InvokeAsync("Navbar"))
        </div>
        <!-- Search -->
        <div class="search-overlay-menu">
            <span class="search-overlay-close"><span class="closebt"><i class="icon_close"></i></span></span>
            <form asp-action="Search" asp-controller="Home" role="search" id="searchform" method="get">
                <input value="" name="q" type="search" placeholder="Search..." />
                <button type="submit"><i class="icon_search"></i></button>
            </form>
        </div><!-- End Search -->
    </header>
    <!-- /header -->

    <main>

        @RenderBody();

    </main>
    <!-- /main -->
    <!-- Footer -->
    @await Component.InvokeAsync("Footer")
    <!--/footer-->

    <div id="toTop"></div><!-- Back to top button -->
    <!-- Modal terms -->
    <div class="modal fade" id="terms-txt" tabindex="-1" role="dialog" aria-labelledby="termsLabel" aria-hidden="true" style="z-index:100000;">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="termsLabel">Terms and conditions</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
