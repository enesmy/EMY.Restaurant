@model EMY.Papel.Restaurant.Core.Domain.Entities.Menu

<h4>Menu</h4>
<hr />

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<input type="hidden" asp-for="MenuID" />
<input type="hidden" asp-for="MenuCategoryID" />

<div class="form-group">
    <label asp-for="Code" class="control-label"></label>
    <input asp-for="Code" style="padding-left:10px;" class="form-control bg-dark text-light" />
    <span asp-validation-for="Code" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Name" class="control-label"></label>
    <input asp-for="Name" style="padding-left:10px;" class="form-control bg-dark text-light" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Description" class="control-label"></label>
    <input asp-for="Description" style="padding-left:10px;" class="form-control bg-dark text-light" />
    <span asp-validation-for="Description" class="text-danger"></span>
</div>
<div class="form-group">
    <label  class="control-label">Photo </label>
    <input id="photoContent" name="photoContent" type="file" accept=".jpg, .png, .jpeg, .gif, .bmp, .tif, .tiff" class="form-control bg-dark text-light" />
</div>
<div class="form-group">
    <label asp-for="Price" class="control-label"></label>
    <input type="number" style="padding-left:10px;" step="0.01" asp-for="Price" class="form-control bg-dark text-light" />
    <span asp-validation-for="Price" class="text-danger"></span>
</div>